{
  "hosting": {
    "site": "pdssolutions.web.app",
    "public": "public/app/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "singleProjectMode": true,
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  },
  "rules": {
    "users": {
      "$user_id": {
        "name": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "age": {
          ".validate": "newData.isNumber() && newData.val() > 0"
        }
      }
    }
  },
  "database": {
    "rules": {
      "users": {
        "$user_id": {
          "name": {
            ".validate": "newData.isString() && newData.val().length > 0"
          },
          "age": {
            ".validate": "newData.isNumber() && newData.val() > 0"
          }
        }
      }
    }
  }
}